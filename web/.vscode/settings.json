// Place your settings in this file to overwrite default and user settings.
{
    "files.exclude": {
        "/**/*.*.js": {
            "when": "$(basename).ts"
        },
        "/**/*.js": {
            "when": "$(basename).ts"
        },
        "/**/*.js.map": true,
        "/**/*.*.css": {
            "when": "$(basename).scss"
        },
        "/**/*.css": {
            "when": "$(basename).scss"
        },
        "/**/*.css.map": true
    },
    "editor.tabSize": 4,
    "editor.detectIndentation": true,
    "typescript.tsdk": "./node_modules/typescript/lib"
}